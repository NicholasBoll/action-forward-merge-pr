{
  "name": "action-forward-merge-pr",
  "version": "1.0.0",
  "description": "Create a forward-merge pull request to keep support branches in sync",
  "scripts": {
    "build": "npm run build:typescript && npm run build:queries",
    "build:typescript": "tsc",
    "build:queries": "ts-graphql-plugin typegen",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map",
    "bundle": "rollup -c",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "main": "dist/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NicholasBoll/action-forward-merge-pr.git"
  },
  "keywords": [
    "forward",
    "merge",
    "pull",
    "request"
  ],
  "author": "Nicholas Boll",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6"
  },
  "devDependencies": {
    "@actions/github": "^4.0.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.0.27",
    "@typescript-eslint/parser": "^4.16.1",
    "@zeit/ncc": "^0.22.3",
    "eslint": "^7.21.0",
    "eslint-plugin-github": "^4.1.2",
    "eslint-plugin-jest": "^23.20.0",
    "graphql": "^15.5.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "js-yaml": "^3.14.0",
    "prettier": "2.0.5",
    "rollup": "^2.50.5",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "ts-graphql-plugin": "^1.12.0",
    "ts-jest": "^26.5.3",
    "typescript": "^3.9.9"
  }
}
